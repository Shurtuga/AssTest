<ComboBoxItem x:Class="AssociationTestVisual.VisualTabs.GroupItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssociationTestVisual.VisualTabs"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
    <DockPanel LastChildFill="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Button DockPanel.Dock="Right" Name ="Button" VerticalAlignment ="Stretch" HorizontalAlignment ="Right" Width="35" Click="Button_Click" Margin="2, 2, 20, 2">X</Button>
        <TextBlock DockPanel.Dock="Left" Name="GroupName" HorizontalAlignment="Stretch"/>
    </DockPanel>
</ComboBoxItem>
